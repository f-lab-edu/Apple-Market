<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.limited.sales.product.ProductMapper">

    <insert id="saveProduct">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT max(id) as id FROM product
        </selectKey>
        INSERT INTO product (name,
                             price,
                             quantity,
                             details,
                             file_group_id,
                             sales_time,
                             end_time)
        VALUES (#{name},
                #{price},
                #{quantity},
                #{details},
                #{fileGroupId},
                #{salesTime},
                #{endTime})
    </insert>

    <select id="findByProductId" parameterType="int" resultType="com.limited.sales.product.vo.Product">
        SELECT id,
               name,
               price,
               quantity,
               details,
               status,
               file_group_id,
               create_date_time,
               sales_time,
               end_time
        FROM product
        WHERE id = #{id}
    </select>


</mapper>